{
  "manifest_version": 3,
  "name": "Codex Terminal (Side Panel)",
  "version": "0.0.1",
  "description": "Local zsh terminal in a Chrome side panel via Native Messaging.",
  "permissions": ["sidePanel", "nativeMessaging", "storage"],
  "action": {
    "default_title": "Codex Terminal"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  }
}
